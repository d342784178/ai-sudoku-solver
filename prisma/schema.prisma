generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model SudokuPuzzles {
  id          Int      @id @default(autoincrement())
  puzzle      String   @db.VarChar(81)
  difficulty  String   @db.VarChar(20)
  solution    String   @db.VarChar(81)
  UserSteps   UserSteps[]
}

model UserSteps {
  id          Int         @id @default(autoincrement())
  puzzleId    Int
  stepNumber  Int
  cell        Int         @db.Integer @default(0)
  value       Int         @db.Integer @default(1)
  SudokuPuzzles SudokuPuzzles @relation(fields: [puzzleId], references: [id])
}