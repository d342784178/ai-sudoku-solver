generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model SudokuPuzzles {
  id          Int      @id @default(autoincrement())
  puzzle      String   @db.VarChar(81)
  difficulty  String   @db.VarChar(20)
  solution    String   @db.VarChar(81)
  createTime  DateTime
}

model UserSteps {
  id          Int      @id @default(autoincrement())
  puzzleId    Int
  cell        Int
  value       Int
  createTime  DateTime
}